<h2>Volunteer: <%= @volunteer.name %></h2>

<form action="/projects/<%= @volunteer.project_id %>/volunteers/<%= @volunteer.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="volunteer">Edit volunteer</label>
  <input id="volunteer" name="volunteer" type="text">

  <button type="submit">Update volunteer</button>
</form>

<form action="/projects/<%= @volunteer.project_id %>/volunteers/<%= @volunteer.id %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete volunteer</button>
</form>

<a href="/projects/<%= @volunteer.project_id %>">Back to project page</a>